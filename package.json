{
    "name": "gitbook-plugin-phpclassdisplayer",
    "version": "1.0.4",
    "description": "Display PHP's classes, methods, functions or constants in your GitBook",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/REJack/gitbook-plugin-phpclassdisplayer.git"
    },
    "keywords": [
        "gitbook",
        "php",
        "classdisplayer"
    ],
    "engines": {
        "gitbook": ">=3.0.0-pre.8"
    },
    "gitbook": {
        "properties": {
            "scope": {
                "type": "string",
                "default": "::",
                "description": "Defines the Scope Resolution Operator between Class and Method in anchors."
            },
            "anchors": {
                "type": "bool",
                "default": true,
                "description": "Enables/Disables Anchors."
            },
            "hint_iconsize": {
                "type": "string",
                "default": "",
                "description": "To increase icon sizes relative to their container, use the fa-lg (33% increase), fa-2x, fa-3x, fa-4x, or fa-5x."
            },
            "hint_iconcenter": {
                "type": "bool",
                "default": false,
                "description": "Enables/Disables Centering Icon."
            },
            "hint_icon_info": {
                "type": "string",
                "default": "info",
                "description": "Info - Hint Icon."
            },
            "hint_icon_tip": {
                "type": "string",
                "default": "mortar-board",
                "description": "Tip - Hint Icon."
            },
            "hint_icon_danger": {
                "type": "string",
                "default": "exclamation",
                "description": "Danger - Hint Icon."
            },
            "hint_icon_working": {
                "type": "string",
                "default": "wrench",
                "description": "Working - Hint Icon."
            }
        }
    },
    "dependencies": {
        "escape-html": "^1.0.3",
        "gitbook-markdown": "^1.3.2"
    },
    "author": "Raphael Jackstadt <info@rejack.de>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/REJack/gitbook-plugin-phpclassdisplayer/issues"
    },
    "homepage": "https://github.com/REJack/gitbook-plugin-phpclassdisplayer#readme"
}
